apiVersion: v1
kind: Secret
metadata:
  name: pingup-secrets
  namespace: pingup
type: Opaque
data:
  # IMPORTANT: This is a template file. Copy to secrets.yaml and replace with actual base64-encoded values
  # To encode: echo -n "your-value" | base64
  # Or PowerShell: [Convert]::ToBase64String([Text.Encoding]::UTF8.GetBytes("your-value"))
  
  # Database Connection
  MONGODB_URI: <base64-encoded-mongodb-connection-string>
  
  # JWT Secrets
  JWT_SECRET: <base64-encoded-jwt-secret>
  JWT_REFRESH_SECRET: <base64-encoded-jwt-refresh-secret>
  
  # Cloudinary Configuration
  CLOUDINARY_CLOUD_NAME: <base64-encoded-cloudinary-name>
  CLOUDINARY_API_KEY: <base64-encoded-cloudinary-api-key>
  CLOUDINARY_API_SECRET: <base64-encoded-cloudinary-api-secret>
  
  # Facebook OAuth (optional)
  FACEBOOK_APP_ID: <base64-encoded-facebook-app-id>
  FACEBOOK_APP_SECRET: <base64-encoded-facebook-app-secret>
  FACEBOOK_REDIRECT_URI: <base64-encoded-facebook-redirect-uri>
  
  # Redis Password (if using authentication)
  REDIS_PASSWORD: <base64-encoded-redis-password>

---
# Instructions:
# 1. Copy this file: cp secrets.yaml.example secrets.yaml
# 2. Replace all <base64-encoded-...> with your actual base64-encoded values
# 3. Never commit secrets.yaml to git (already in .gitignore)
# 
# Example encoding:
#   Linux/Mac:    echo -n "mypassword123" | base64
#   Windows PS:   [Convert]::ToBase64String([Text.Encoding]::UTF8.GetBytes("mypassword123"))
